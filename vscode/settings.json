{
    // Editor Settings
    "editor.fontLigatures": true,
    "editor.insertSpaces": true,
    "workbench.colorTheme": "An Old Hope",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.revealIfOpen": true,
    "workbench.activityBar.visible": true,
    "window.title": "${rootName}${separator}${activeEditorMedium} ${dirtye}",
    "search.useIgnoreFilesByDefault": true,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.sass-cache": true,
        "**/vendor": true,
        "**/wp": true,
        "**/plugins": true,
        "**/build": true,
        "**/www": true,
        "**/dist": true,
        "**/fonts": true
    },
    "terminal.external.osxExec": "iTerm2.app",
    "terminal.integrated.fontFamily": "DejaVu Sans Mono for Powerline",
    "terminal.integrated.lineHeight": 1.5,
    "terminal.integrated.fontLigatures": true,
    "terminal.integrated.cursorBlinking": true,

    // Plugin Settings
    "material-icon-theme.folders.iconsEnabled": false,
    "markdown.preview.fontFamily": "'Roboto', 'Helvetica', 'Segoe WPC', 'Segoe UI', 'SFUIText-Light', 'HelveticaNeue-Light', sans-serif",
    "zenMode.hideTabs": false,
    "emmet.syntaxProfiles": {
        "vue-html": "html",
        "vue": "html"
    },
    "eslint.validate": [ "javascript", "javascriptreact", "vue" ],
    "editor.renderWhitespace": "all",
    "window.zoomLevel": 0,
    "files.associations": {
        "bash_profile": "shellscript"
    }
}